---
import Layout from '../../layouts/Layout.astro';
import { mockNews } from '../../data/mockNews.js';

export async function getStaticPaths() {
  return mockNews.map((article) => ({
    params: { slug: article.slug },
  }));
}

const { slug } = Astro.params;
const article = mockNews.find((a) => a.slug === slug);

if (!article) {
  return Astro.redirect('/news');
}

// Get related articles (same category, different article)
const relatedArticles = mockNews
  .filter((a) => a.category === article.category && a.id !== article.id)
  .slice(0, 3);
---

<Layout
  title={`${article.title} | Xolar Solar News`}
  description={article.excerpt}
  keywords={`${article.category.toLowerCase()}, solar news, ${article.title.toLowerCase()}`}
>
  <!-- Breadcrumb -->
  <nav class="bg-gray-50 border-b border-gray-200 py-4">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center space-x-2 text-sm">
        <li>
          <a href="/" class="text-gray-600 hover:text-primary-600 transition-colors duration-200">
            Home
          </a>
        </li>
        <li class="text-gray-400">/</li>
        <li>
          <a
            href="/news"
            class="text-gray-600 hover:text-primary-600 transition-colors duration-200"
          >
            News
          </a>
        </li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium truncate max-w-xs">{article.category}</li>
      </ol>
    </div>
  </nav>

  <!-- Article Header -->
  <article class="py-12 lg:py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Category Badge -->
      <div class="mb-6">
        <span
          class="inline-block px-4 py-2 bg-primary-100 text-primary-700 text-sm font-medium rounded-full"
        >
          {article.category}
        </span>
      </div>

      <!-- Title -->
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
        {article.title}
      </h1>

      <!-- Meta Info -->
      <div class="flex flex-wrap items-center gap-6 mb-8 pb-8 border-b border-gray-200">
        <div class="flex items-center space-x-4">
          <div
            class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center text-primary-600 font-bold text-lg"
          >
            {article.author.split(' ').map((n) => n[0]).join('')}
          </div>
          <div>
            <p class="font-semibold text-gray-900">{article.author}</p>
            <p class="text-sm text-gray-600">{article.authorTitle}</p>
          </div>
        </div>
        <div class="flex items-center space-x-4 text-sm text-gray-600">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
            <span>{new Date(article.publishedDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
          </div>
          <span>•</span>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
            <span>{article.readTime}</span>
          </div>
        </div>
      </div>

      <!-- Featured Image -->
      <div class="mb-12 rounded-2xl overflow-hidden shadow-xl">
        <img src={article.featuredImage} alt={article.title} class="w-full h-auto" />
      </div>

      <!-- Article Content -->
      <div class="prose prose-lg max-w-none">
        <div class="text-xl text-gray-700 leading-relaxed mb-8 font-medium">
          {article.excerpt}
        </div>

        <div
          class="article-content text-gray-700 leading-relaxed space-y-6"
          set:html={article.content.trim().split('\n\n').map((paragraph) => {
            // Handle headers
            if (paragraph.startsWith('## ')) {
              return `<h2 class="text-3xl font-bold text-gray-900 mt-12 mb-6">${paragraph.replace('## ', '')}</h2>`;
            }
            if (paragraph.startsWith('### ')) {
              return `<h3 class="text-2xl font-bold text-gray-900 mt-8 mb-4">${paragraph.replace('### ', '')}</h3>`;
            }

            // Handle bullet lists
            if (paragraph.includes('\n- ')) {
              const items = paragraph.split('\n- ').filter(item => item.trim());
              const listItems = items.map(item => `<li class="mb-2">${item.trim()}</li>`).join('');
              return `<ul class="list-disc list-inside space-y-2 my-6">${listItems}</ul>`;
            }

            // Handle blockquotes
            if (paragraph.startsWith('"')) {
              return `<blockquote class="border-l-4 border-primary-500 pl-6 italic text-gray-600 my-8">${paragraph}</blockquote>`;
            }

            // Regular paragraphs
            return `<p class="mb-6">${paragraph}</p>`;
          }).join('')}
        />
      </div>

      <!-- Share Buttons -->
      <div class="mt-12 pt-8 border-t border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Share this article</h3>
        <div class="flex items-center space-x-4">
          <button
            class="flex items-center justify-center w-10 h-10 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors duration-200"
            aria-label="Share on Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
          </button>
          <button
            class="flex items-center justify-center w-10 h-10 bg-sky-500 text-white rounded-full hover:bg-sky-600 transition-colors duration-200"
            aria-label="Share on Twitter"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
              ></path>
            </svg>
          </button>
          <button
            class="flex items-center justify-center w-10 h-10 bg-blue-700 text-white rounded-full hover:bg-blue-800 transition-colors duration-200"
            aria-label="Share on LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </button>
          <button
            class="flex items-center justify-center w-10 h-10 bg-gray-600 text-white rounded-full hover:bg-gray-700 transition-colors duration-200"
            aria-label="Copy link"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
              ></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </article>

  <!-- Related Articles -->
  {
    relatedArticles.length > 0 && (
      <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-8">Related Articles</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {relatedArticles.map((related) => (
              <article class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-lg transition-shadow duration-300">
                <a href={`/news/${related.slug}`}>
                  <div class="relative h-48">
                    <img
                      src={related.featuredImage}
                      alt={related.title}
                      class="w-full h-full object-cover"
                    />
                    <div class="absolute top-4 left-4">
                      <span class="px-3 py-1 bg-white text-primary-600 text-xs font-medium rounded-full shadow-sm">
                        {related.category}
                      </span>
                    </div>
                  </div>
                  <div class="p-6">
                    <div class="flex items-center space-x-3 text-xs text-gray-600 mb-3">
                      <span>{related.publishedDate}</span>
                      <span>•</span>
                      <span>{related.readTime}</span>
                    </div>
                    <h3 class="text-lg font-bold text-gray-900 mb-2 hover:text-primary-600 transition-colors duration-200 line-clamp-2">
                      {related.title}
                    </h3>
                    <p class="text-gray-600 text-sm line-clamp-2">{related.excerpt}</p>
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- CTA Section -->
  <section class="py-16 bg-primary-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Ready to Go Solar?</h2>
      <p class="text-xl text-primary-100 mb-8">
        Get a free quote and start saving on your energy bills today.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/quote"
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg hover:bg-gray-50 transition-colors duration-200"
        >
          Get Free Quote
        </a>
        <a
          href="/news"
          class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors duration-200"
        >
          More News
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .article-content h2 {
    scroll-margin-top: 2rem;
  }

  .article-content h3 {
    scroll-margin-top: 2rem;
  }

  .article-content a {
    color: #ea580c;
    text-decoration: underline;
  }

  .article-content a:hover {
    color: #c2410c;
  }

  .article-content strong {
    font-weight: 600;
    color: #111827;
  }

  .article-content ul {
    padding-left: 1.5rem;
  }

  .article-content blockquote {
    font-style: italic;
  }
</style>
