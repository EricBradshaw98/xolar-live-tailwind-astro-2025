---
import Layout from '../../layouts/Layout.astro';
import { commercialServices, getServiceBySlug } from '../../data/commercialServices';

export async function getStaticPaths() {
  return commercialServices.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;

if (!service) {
  return Astro.redirect('/commercial');
}
---

<Layout
  title={service.title + ' | Xolar Inc.'}
  description={service.metaDescription}
  keywords={service.keywords.join(', ')}
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-50 to-green-50 pt-20 pb-16 lg:pt-28 lg:pb-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl">
        <div class="mb-6">
          <a
            href="/commercial"
            class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Commercial Solutions
          </a>
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
          {service.hero.title}
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          {service.hero.subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="/quote"
            class="inline-flex items-center justify-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors duration-200"
          >
            Get Commercial Quote
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-4 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:border-primary-500 hover:text-primary-600 transition-colors duration-200"
          >
            Schedule Consultation
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Overview Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            {service.overview.title}
          </h2>
          <p class="text-lg text-gray-600 mb-8">
            {service.overview.description}
          </p>
        </div>
        <div class="bg-gray-50 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Key Benefits</h3>
          <div class="space-y-4">
            {
              service.overview.keyBenefits.map((benefit) => (
                <div class="flex items-start space-x-3">
                  <svg
                    class="w-6 h-6 text-green-500 mt-1 flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span class="text-gray-700">{benefit}</span>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {service.features.title}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {service.features.description}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          service.features.items.map((feature) => (
            <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
              <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-6">
                <svg
                  class="w-8 h-8 text-primary-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d={feature.icon}
                  />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {service.process.title}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {service.process.description}
        </p>
      </div>

      <div class="space-y-8">
        {
          service.process.steps.map((step) => (
            <div class="flex items-start space-x-6">
              <div class="flex-shrink-0">
                <div class="w-20 h-20 bg-primary-600 rounded-full flex items-center justify-center">
                  <span class="text-3xl font-bold text-white">{step.number}</span>
                </div>
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-gray-900 mb-3">{step.title}</h3>
                <p class="text-lg text-gray-600">{step.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Specifications Section -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {service.specifications.title}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {service.specifications.description}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          service.specifications.categories.map((category) => (
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
              <div class="bg-primary-600 px-6 py-4">
                <h3 class="text-xl font-bold text-white">{category.title}</h3>
              </div>
              <div class="p-6 space-y-4">
                {category.specs.map((spec) => (
                  <div>
                    <dt class="text-sm font-medium text-gray-500 mb-1">{spec.label}</dt>
                    <dd class="text-lg font-semibold text-gray-900">{spec.value}</dd>
                  </div>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="bg-gradient-to-br from-primary-50 to-primary-100 rounded-2xl p-8 lg:p-12">
          <div class="text-center mb-8">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
              {service.pricing.title}
            </h2>
            <p class="text-lg text-gray-600">
              {service.pricing.description}
            </p>
          </div>

          <div class="bg-white rounded-xl p-8 mb-8">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Pricing Factors</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {
                service.pricing.factors.map((factor) => (
                  <div class="flex items-start space-x-3">
                    <svg
                      class="w-5 h-5 text-primary-600 mt-1 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span class="text-gray-700">{factor}</span>
                  </div>
                ))
              }
            </div>
          </div>

          <p class="text-sm text-gray-600 text-center mb-6">{service.pricing.disclaimer}</p>

          <div class="text-center">
            <a
              href="/quote"
              class="inline-flex items-center justify-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors duration-200"
            >
              Request Custom Proposal
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Case Studies Section -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {service.caseStudies.title}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {service.caseStudies.description}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          service.caseStudies.studies.map((study) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
              <div class="h-48 bg-gray-200">
                <img
                  src={study.image}
                  alt={study.title}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-3">{study.title}</h3>
                <div class="space-y-2 mb-4">
                  <div class="flex items-center text-sm text-gray-600">
                    <svg
                      class="w-4 h-4 mr-2 text-primary-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                      />
                    </svg>
                    <span>{study.client}</span>
                  </div>
                  <div class="flex items-center text-sm text-gray-600">
                    <svg
                      class="w-4 h-4 mr-2 text-primary-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                      />
                    </svg>
                    <span>{study.location}</span>
                  </div>
                  <div class="flex items-center justify-between pt-2">
                    <div>
                      <p class="text-xs text-gray-500">System Size</p>
                      <p class="text-lg font-bold text-primary-600">{study.systemSize}</p>
                    </div>
                    <div>
                      <p class="text-xs text-gray-500">Annual Savings</p>
                      <p class="text-lg font-bold text-green-600">{study.savings}</p>
                    </div>
                  </div>
                </div>
                <p class="text-gray-600 text-sm">{study.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {service.faqs.title}
        </h2>
      </div>

      <div class="max-w-4xl mx-auto space-y-4">
        {
          service.faqs.items.map((item) => (
            <details class="bg-gray-50 border border-gray-200 rounded-xl shadow-sm overflow-hidden group">
              <summary class="w-full px-6 py-5 text-left flex items-center justify-between cursor-pointer hover:bg-gray-100 transition-colors duration-200 list-none">
                <h3 class="text-lg font-semibold text-gray-900 pr-4">{item.question}</h3>
                <svg
                  class="w-5 h-5 text-primary-500 transform transition-transform duration-300 group-open:rotate-180 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"
                  />
                </svg>
              </summary>
              <div class="px-6 pb-5 border-t border-gray-200">
                <div class="pt-4">
                  <p class="text-gray-600 leading-relaxed">{item.answer}</p>
                </div>
              </div>
            </details>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-primary-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        {service.cta.title}
      </h2>
      <p class="text-xl text-primary-100 mb-8 max-w-3xl mx-auto">
        {service.cta.description}
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={service.cta.primaryButton.href}
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors duration-200"
        >
          {service.cta.primaryButton.text}
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            />
          </svg>
        </a>
        <a
          href={service.cta.secondaryButton.href}
          class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-primary-600 transition-colors duration-200"
        >
          {service.cta.secondaryButton.text}
        </a>
      </div>
    </div>
  </section>
</Layout>
