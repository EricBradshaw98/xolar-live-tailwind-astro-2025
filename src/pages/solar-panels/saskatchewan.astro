---
import Layout from '../../layouts/Layout.astro';
import { saskatchewanData } from '../../data/locations/saskatchewan';

const province = saskatchewanData;
---

<Layout
  title={`Solar Panels ${province.name} | Solar Installation in ${province.code}`}
  description={`Professional solar panel installation across ${province.name}. Get a free quote and start saving on your energy bills. Serving ${province.cities.length} cities across ${province.code}.`}
>
  <div class="bg-gradient-to-br from-primary-50 to-white py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="flex items-center gap-3 text-sm text-gray-600 mb-4">
          <a href="/solar-panels" class="hover:text-primary-600">Locations</a>
          <span>/</span>
          <span class="text-gray-900">{province.name}</span>
        </div>

        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Solar Panels in {province.name}
        </h1>

        <p class="text-xl text-gray-700 mb-8">
          Professional solar panel installation across {province.name}.
          Save an average of <strong>{province.data.averageSavings}</strong> on your energy bills.
        </p>

        <div class="flex flex-wrap gap-4">
          <a
            href="/quote"
            class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors shadow-lg"
          >
            Get Free Quote
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a
            href="#cities"
            class="inline-flex items-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg hover:bg-gray-50 transition-colors border-2 border-primary-600"
          >
            Browse Cities
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-200">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Average Savings</h3>
          </div>
          <p class="text-3xl font-bold text-primary-600 mb-2">{province.data.averageSavings}</p>
          <p class="text-sm text-gray-600">Across {province.name}</p>
        </div>

        <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-200">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Solar Potential</h3>
          </div>
          <p class="text-lg font-bold text-primary-600 mb-2">{province.data.solarPotential}</p>
          <p class="text-sm text-gray-600">{province.data.climate}</p>
        </div>

        <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-200">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Cities Served</h3>
          </div>
          <p class="text-3xl font-bold text-primary-600 mb-2">{province.cities.length}</p>
          <p class="text-sm text-gray-600">Across {province.name}</p>
        </div>
      </div>

      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">{province.name} Solar Incentives & Rebates</h2>
        <div class="bg-gradient-to-br from-green-50 to-white rounded-xl p-8 border border-green-200">
          <p class="text-gray-700 mb-6">
            {province.name} residents can take advantage of several provincial and federal solar incentives:
          </p>
          <ul class="space-y-3">
            {province.data.provincialIncentives.map((incentive) => (
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-gray-800">{incentive}</span>
              </li>
            ))}
          </ul>
        </div>
      </section>

      <section id="cities" class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Solar Panel Installation by City</h2>
        <p class="text-gray-700 mb-8">
          Select your city to learn about local solar incentives, savings estimates, and solar potential in your area:
        </p>
        <div class="grid md:grid-cols-3 gap-4">
          {province.cities.map((city) => (
            <a
              href={`/solar-panels/${province.slug}/${city.slug}`}
              class="group bg-white rounded-lg p-6 shadow-sm border border-gray-200 hover:border-primary-600 hover:shadow-md transition-all"
            >
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">
                    {city.name}
                  </h3>
                  <p class="text-sm text-gray-600 mt-1">{city.data.averageSavings} avg. savings</p>
                </div>
                <svg class="w-5 h-5 text-gray-400 group-hover:text-primary-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Installer CTA -->
      <section class="mb-16">
        <div class="bg-white rounded-xl p-8 shadow-sm border-2 border-primary-200">
          <div class="flex flex-col md:flex-row items-center justify-between gap-6">
            <div class="flex items-center gap-4">
              <div class="w-16 h-16 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-1">Are You a Solar Installer?</h3>
                <p class="text-gray-600">Join our network and showcase your {province.name} projects to homeowners</p>
              </div>
            </div>
            <a href="/installers/projects" class="inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors whitespace-nowrap">
              View Installer Portal
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </section>

      <section class="mb-16">
        <div class="bg-gradient-to-br from-primary-600 to-primary-700 rounded-2xl p-12 text-white text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Ready to Start Saving in {province.name}?
          </h2>
          <p class="text-xl mb-8 text-primary-50">
            Get a free quote and see how much you can save with solar
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a
              href="/quote"
              class="inline-flex items-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors shadow-lg"
            >
              Get Your Free Quote
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
            <a
              href="/contact"
              class="inline-flex items-center px-8 py-4 bg-primary-500 text-white font-semibold rounded-lg hover:bg-primary-400 transition-colors border-2 border-white"
            >
              Contact Us
            </a>
          </div>
        </div>
      </section>

      <section>
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Why Choose Solar in {province.name}?</h2>
        <div class="prose prose-lg max-w-none text-gray-700">
          <p>
            {province.name} is one of Canada's best provinces for solar energy. With {province.data.solarPotential.toLowerCase()},
            homeowners across the province can expect excellent returns on their solar investment. {province.data.climate},
            providing optimal conditions for solar energy generation year-round.
          </p>
          <p>
            With electricity rates averaging {province.data.avgElectricityRate}, {province.name} households can save
            an average of {province.data.averageSavings} by switching to solar. Combined with generous provincial
            and federal incentives, there's never been a better time to go solar in {province.name}.
          </p>
          <h3 class="text-2xl font-bold text-gray-900 mt-8 mb-4">Our Solar Installation Process</h3>
          <ol class="space-y-4">
            <li class="flex items-start">
              <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold mr-4">1</span>
              <div>
                <strong>Free Consultation & Quote</strong> - We assess your property and provide a detailed proposal
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold mr-4">2</span>
              <div>
                <strong>Permitting & Design</strong> - We handle all permits and design your custom system
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold mr-4">3</span>
              <div>
                <strong>Professional Installation</strong> - Our certified team installs your system in 1-3 days
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold mr-4">4</span>
              <div>
                <strong>Utility Connection & Activation</strong> - We coordinate with your utility for net billing setup
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold mr-4">5</span>
              <div>
                <strong>Ongoing Support</strong> - 25-year warranty and local support team
              </div>
            </li>
          </ol>
        </div>
      </section>
    </div>
  </div>
</Layout>
