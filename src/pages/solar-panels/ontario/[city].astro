      <div class="flex flex-wrap gap-3">
        {province.cities.filter(c => c.slug !== city.slug).map((otherCity) => (
          <a href={`/solar-panels/${province.slug}/${otherCity.slug}`} class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-primary-100 hover:text-primary-700 transition-colors">
            {otherCity.name}
