---
import Layout from '../../layouts/Layout.astro';
import britishColumbiaData from '../../data/locations/british-columbia';

const service = 'Solar Panels';
const province = britishColumbiaData;

const seoData = {
  title: `${service} in ${province.name} | Professional Installation | Xolar Inc.`,
  description: `Professional solar panel installation across ${province.name}. Save ${province.data.averageSavings} on energy costs. 25-year warranty. Free quote available in all major cities.`,
  keywords: `solar panels ${province.name}, solar installation ${province.slug}, ${province.name} solar energy, residential solar ${province.slug}`,
};
---

<Layout title={seoData.title} description={seoData.description} keywords={seoData.keywords}>
  <!-- Breadcrumb -->
  <nav class="bg-gray-50 border-b border-gray-200 py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center space-x-2 text-sm">
        <li><a href="/" class="text-gray-600 hover:text-primary-600">Home</a></li>
        <li class="text-gray-400">/</li>
        <li><a href="/residential" class="text-gray-600 hover:text-primary-600">Residential</a></li>
        <li class="text-gray-400">/</li>
        <li><a href="/residential/solar-panels" class="text-gray-600 hover:text-primary-600">Solar Panels</a></li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium">{province.name}</li>
      </ol>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-50 to-green-50 pt-16 pb-20 lg:pt-24 lg:pb-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
          Solar Panels in {province.name}
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Professional solar panel installation across {province.name}. Reduce your electricity bills by up to 90% with premium solar systems designed for BC's diverse climate.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/quote" class="inline-flex items-center justify-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
            Get Free Quote
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a href="tel:+1-800-XOLAR-CA" class="inline-flex items-center justify-center px-8 py-4 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:border-primary-500 hover:text-primary-600 transition-colors">
            Call 1-800-XOLAR-CA
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Key Stats -->
  <section class="py-12 bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="text-3xl font-bold text-primary-600 mb-2">{province.data.averageSavings}</div>
          <p class="text-gray-600">Average Annual Savings</p>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary-600 mb-2">{province.data.avgElectricityRate}</div>
          <p class="text-gray-600">Avg Electricity Rate</p>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary-600 mb-2">{province.data.paybackPeriod}</div>
          <p class="text-gray-600">Payback Period</p>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary-600 mb-2">{province.data.avgSystemSize}</div>
          <p class="text-gray-600">Avg System Size</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Cities We Serve -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Cities We Serve in {province.name}
        </h2>
        <p class="text-xl text-gray-600">
          Professional solar installation available across all major cities
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {province.cities.map((city) => (
          <a href={`/solar-panels/${province.slug}/${city.slug}`} class="group bg-white rounded-xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 border-2 border-gray-100 hover:border-primary-500">
            <div class="flex items-start justify-between mb-4">
              <div>
                <h3 class="text-2xl font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">{city.name}</h3>
                <p class="text-sm text-gray-500">{city.data.population} residents</p>
              </div>
              <svg class="w-6 h-6 text-gray-400 group-hover:text-primary-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>

            <div class="space-y-3 mb-4">
              <div class="flex items-center text-sm text-gray-600">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>Avg savings: {city.data.averageSavings}</span>
              </div>
              <div class="flex items-center text-sm text-gray-600">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>Payback: {city.data.paybackPeriod}</span>
              </div>
              <div class="flex items-center text-sm text-gray-600">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>{city.data.solarPotential}</span>
              </div>
            </div>

            <div class="pt-4 border-t border-gray-100">
              <span class="text-primary-600 font-semibold group-hover:underline">View {city.name} Solar Options â†’</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- BC-Specific Benefits -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            Why Choose Solar in {province.name}?
          </h2>
          <p class="text-lg text-gray-600 mb-6">
            {province.data.climate}. With {province.data.solarPotential}, {province.name} is an excellent location for solar energy production.
          </p>
          <p class="text-lg text-gray-600 mb-8">
            Homeowners across {province.name} save an average of {province.data.averageSavings} annually on electricity costs with solar panel systems.
          </p>

          <div class="space-y-4">
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-green-500 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Diverse Solar Potential</h3>
                <p class="text-gray-600">{province.data.solarPotential} - from coastal to interior regions</p>
              </div>
            </div>

            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-green-500 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">CleanBC Programs</h3>
                <p class="text-gray-600">Access provincial rebates and PST exemptions to reduce upfront costs</p>
              </div>
            </div>

            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-green-500 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">BC Hydro Net Metering</h3>
                <p class="text-gray-600">Sell excess power back to the grid at retail rates</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-primary-50 to-primary-100 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">{province.name} Solar Incentives</h3>
          <div class="space-y-4">
            {province.data.provincialIncentives.map((incentive) => (
              <div class="bg-white rounded-lg p-4 flex items-start space-x-3">
                <svg class="w-5 h-5 text-primary-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">{incentive}</span>
              </div>
            ))}
          </div>

          <div class="mt-6 pt-6 border-t border-primary-200">
            <a href="/quote" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold">
              Calculate Your Savings
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Xolar -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {province.name}'s Trusted Solar Installer
        </h2>
        <p class="text-xl text-gray-600">
          Professional installation, premium equipment, and unmatched service
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-xl p-8 text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Local Expertise</h3>
          <p class="text-gray-600">
            Our team understands {province.name}'s diverse climate, regulations, and utility requirements
          </p>
        </div>

        <div class="bg-white rounded-xl p-8 text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Maximum Savings</h3>
          <p class="text-gray-600">
            We help you access all available {province.name} rebates and CleanBC incentives
          </p>
        </div>

        <div class="bg-white rounded-xl p-8 text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">25-Year Warranty</h3>
          <p class="text-gray-600">
            Industry-leading warranties on panels, inverters, and workmanship
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-primary-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to Go Solar in {province.name}?
      </h2>
      <p class="text-xl text-primary-100 mb-8 max-w-3xl mx-auto">
        Get a free, no-obligation quote for your {province.name} property. Our experts will provide a detailed analysis of your potential savings.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/quote" class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors">
          Get Free Quote
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
        <a href="tel:+1-800-XOLAR-CA" class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-primary-600 transition-colors">
          Call 1-800-XOLAR-CA
        </a>
      </div>
    </div>
  </section>
</Layout>
