---
import Layout from '../layouts/Layout.astro';

const seoData = {
  title: 'Get Free Solar Quote | Xolar Inc.',
  description:
    'Get a free, no-obligation solar quote for your home or business. Our experts will provide a detailed analysis of your energy savings potential.',
  keywords: 'solar quote, free solar estimate, solar panel quote, solar installation cost, solar savings calculator',
};
---

<Layout title={seoData.title} description={seoData.description} keywords={seoData.keywords}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-50 to-green-50 pt-20 pb-16 lg:pt-28 lg:pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
          Get Your Free Solar Quote
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Start your journey to energy independence. Fill out the form below and our solar experts
          will provide a detailed proposal tailored to your needs.
        </p>
      </div>
    </div>
  </section>

  <!-- Main Quote Form Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Form -->
        <div class="lg:col-span-2">
          <div class="bg-white border-2 border-gray-200 rounded-2xl p-8 lg:p-12">
            <form class="space-y-8">
              <!-- Project Type -->
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-4">
                  What type of project are you interested in?
                </label>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                  <label class="relative flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-primary-500 transition-colors duration-200">
                    <input type="radio" name="projectType" value="residential" class="sr-only peer" checked />
                    <div class="flex items-center space-x-3 w-full">
                      <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center peer-checked:bg-primary-600 transition-colors duration-200">
                        <svg class="w-6 h-6 text-primary-600 peer-checked:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                      </div>
                      <span class="font-medium text-gray-900">Residential</span>
                    </div>
                    <div class="absolute inset-0 border-2 border-primary-600 rounded-lg opacity-0 peer-checked:opacity-100 transition-opacity duration-200"></div>
                  </label>

                  <label class="relative flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-primary-500 transition-colors duration-200">
                    <input type="radio" name="projectType" value="commercial" class="sr-only peer" />
                    <div class="flex items-center space-x-3 w-full">
                      <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center peer-checked:bg-primary-600 transition-colors duration-200">
                        <svg class="w-6 h-6 text-primary-600 peer-checked:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                      </div>
                      <span class="font-medium text-gray-900">Commercial</span>
                    </div>
                    <div class="absolute inset-0 border-2 border-primary-600 rounded-lg opacity-0 peer-checked:opacity-100 transition-opacity duration-200"></div>
                  </label>
                </div>
              </div>

              <!-- Personal Information -->
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-6">Contact Information</h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                  <div>
                    <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                      First Name *
                    </label>
                    <input
                      type="text"
                      id="firstName"
                      name="firstName"
                      required
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                    />
                  </div>
                  <div>
                    <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                      Last Name *
                    </label>
                    <input
                      type="text"
                      id="lastName"
                      name="lastName"
                      required
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                    />
                  </div>
                  <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                      Email Address *
                    </label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      required
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                    />
                  </div>
                  <div>
                    <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                      Phone Number *
                    </label>
                    <input
                      type="tel"
                      id="phone"
                      name="phone"
                      required
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                    />
                  </div>
                </div>
              </div>

              <!-- Property Information -->
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-6">Property Information</h3>
                <div class="space-y-6">
                  <div>
                    <label for="address" class="block text-sm font-medium text-gray-700 mb-2">
                      Property Address *
                    </label>
                    <input
                      type="text"
                      id="address"
                      name="address"
                      required
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                    />
                  </div>
                  <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
                    <div>
                      <label for="city" class="block text-sm font-medium text-gray-700 mb-2">
                        City *
                      </label>
                      <input
                        type="text"
                        id="city"
                        name="city"
                        required
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                      />
                    </div>
                    <div>
                      <label for="province" class="block text-sm font-medium text-gray-700 mb-2">
                        Province *
                      </label>
                      <select
                        id="province"
                        name="province"
                        required
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                      >
                        <option value="">Select Province</option>
                        <option value="AB">Alberta</option>
                        <option value="BC">British Columbia</option>
                        <option value="MB">Manitoba</option>
                        <option value="NB">New Brunswick</option>
                        <option value="NL">Newfoundland and Labrador</option>
                        <option value="NS">Nova Scotia</option>
                        <option value="ON">Ontario</option>
                        <option value="PE">Prince Edward Island</option>
                        <option value="QC">Quebec</option>
                        <option value="SK">Saskatchewan</option>
                      </select>
                    </div>
                    <div>
                      <label for="postalCode" class="block text-sm font-medium text-gray-700 mb-2">
                        Postal Code *
                      </label>
                      <input
                        type="text"
                        id="postalCode"
                        name="postalCode"
                        required
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                      />
                    </div>
                  </div>
                  <div>
                    <label for="propertyType" class="block text-sm font-medium text-gray-700 mb-2">
                      Property Type *
                    </label>
                    <select
                      id="propertyType"
                      name="propertyType"
                      required
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                    >
                      <option value="">Select Type</option>
                      <option value="single-family">Single Family Home</option>
                      <option value="townhouse">Townhouse</option>
                      <option value="condo">Condo</option>
                      <option value="multi-unit">Multi-Unit Building</option>
                      <option value="office">Office Building</option>
                      <option value="warehouse">Warehouse</option>
                      <option value="retail">Retail Store</option>
                      <option value="industrial">Industrial Facility</option>
                      <option value="other">Other</option>
                    </select>
                  </div>
                </div>
              </div>

              <!-- Energy Information -->
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-6">Energy Information</h3>
                <div class="space-y-6">
                  <div>
                    <label for="electricBill" class="block text-sm font-medium text-gray-700 mb-2">
                      Average Monthly Electric Bill *
                    </label>
                    <select
                      id="electricBill"
                      name="electricBill"
                      required
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                    >
                      <option value="">Select range</option>
                      <option value="0-100">$0 - $100</option>
                      <option value="100-200">$100 - $200</option>
                      <option value="200-300">$200 - $300</option>
                      <option value="300-500">$300 - $500</option>
                      <option value="500-1000">$500 - $1,000</option>
                      <option value="1000+">$1,000+</option>
                    </select>
                  </div>
                  <div>
                    <label for="roofType" class="block text-sm font-medium text-gray-700 mb-2">
                      Roof Type
                    </label>
                    <select
                      id="roofType"
                      name="roofType"
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                    >
                      <option value="">Select Type</option>
                      <option value="asphalt">Asphalt Shingles</option>
                      <option value="metal">Metal</option>
                      <option value="tile">Tile</option>
                      <option value="flat">Flat</option>
                      <option value="other">Other</option>
                      <option value="unknown">Not Sure</option>
                    </select>
                  </div>
                </div>
              </div>

              <!-- Services Interested In -->
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-4">
                  Which services are you interested in? (Select all that apply)
                </label>
                <div class="space-y-3">
                  <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-primary-500 transition-colors duration-200">
                    <input type="checkbox" name="services" value="solar-panels" class="w-5 h-5 text-primary-600 border-gray-300 rounded focus:ring-primary-500" />
                    <span class="ml-3 text-gray-900">Solar Panel Installation</span>
                  </label>
                  <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-primary-500 transition-colors duration-200">
                    <input type="checkbox" name="services" value="battery-storage" class="w-5 h-5 text-primary-600 border-gray-300 rounded focus:ring-primary-500" />
                    <span class="ml-3 text-gray-900">Battery Storage (Tesla Powerwall)</span>
                  </label>
                  <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-primary-500 transition-colors duration-200">
                    <input type="checkbox" name="services" value="heat-pumps" class="w-5 h-5 text-primary-600 border-gray-300 rounded focus:ring-primary-500" />
                    <span class="ml-3 text-gray-900">Heat Pumps</span>
                  </label>
                  <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-primary-500 transition-colors duration-200">
                    <input type="checkbox" name="services" value="ev-charging" class="w-5 h-5 text-primary-600 border-gray-300 rounded focus:ring-primary-500" />
                    <span class="ml-3 text-gray-900">EV Charging Station</span>
                  </label>
                  <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-primary-500 transition-colors duration-200">
                    <input type="checkbox" name="services" value="maintenance" class="w-5 h-5 text-primary-600 border-gray-300 rounded focus:ring-primary-500" />
                    <span class="ml-3 text-gray-900">Maintenance Services</span>
                  </label>
                </div>
              </div>

              <!-- Timeline -->
              <div>
                <label for="timeline" class="block text-sm font-medium text-gray-700 mb-2">
                  When are you looking to start?
                </label>
                <select
                  id="timeline"
                  name="timeline"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                >
                  <option value="">Select timeframe</option>
                  <option value="asap">As soon as possible</option>
                  <option value="1-3-months">1-3 months</option>
                  <option value="3-6-months">3-6 months</option>
                  <option value="6-12-months">6-12 months</option>
                  <option value="just-researching">Just researching</option>
                </select>
              </div>

              <!-- Additional Information -->
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                  Additional Information or Questions
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                  placeholder="Tell us more about your project or any specific requirements..."
                ></textarea>
              </div>

              <!-- Submit Button -->
              <div class="pt-6">
                <button
                  type="submit"
                  class="w-full bg-primary-600 text-white font-semibold py-4 rounded-lg hover:bg-primary-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
                >
                  Get My Free Quote
                </button>
                <p class="text-sm text-gray-500 text-center mt-4">
                  By submitting this form, you agree to our privacy policy and terms of service.
                </p>
              </div>
            </form>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-8 space-y-8">
            <!-- What to Expect -->
            <div class="bg-gradient-to-br from-primary-50 to-primary-100 rounded-2xl p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">What to Expect</h3>
              <div class="space-y-6">
                <div class="flex items-start space-x-4">
                  <div class="w-8 h-8 bg-primary-600 rounded-full flex items-center justify-center flex-shrink-0">
                    <span class="text-white font-bold">1</span>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900 mb-1">Free Consultation</h4>
                    <p class="text-sm text-gray-600">
                      We'll review your information and schedule a call to discuss your needs
                    </p>
                  </div>
                </div>
                <div class="flex items-start space-x-4">
                  <div class="w-8 h-8 bg-primary-600 rounded-full flex items-center justify-center flex-shrink-0">
                    <span class="text-white font-bold">2</span>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900 mb-1">Site Assessment</h4>
                    <p class="text-sm text-gray-600">
                      Virtual or in-person evaluation of your property and energy usage
                    </p>
                  </div>
                </div>
                <div class="flex items-start space-x-4">
                  <div class="w-8 h-8 bg-primary-600 rounded-full flex items-center justify-center flex-shrink-0">
                    <span class="text-white font-bold">3</span>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900 mb-1">Custom Proposal</h4>
                    <p class="text-sm text-gray-600">
                      Detailed quote with system design, costs, and savings projections
                    </p>
                  </div>
                </div>
                <div class="flex items-start space-x-4">
                  <div class="w-8 h-8 bg-primary-600 rounded-full flex items-center justify-center flex-shrink-0">
                    <span class="text-white font-bold">4</span>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900 mb-1">Installation</h4>
                    <p class="text-sm text-gray-600">
                      Professional installation and system activation by certified experts
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Contact Info -->
            <div class="bg-gray-50 rounded-2xl p-8">
              <h3 class="text-xl font-bold text-gray-900 mb-6">Need Help?</h3>
              <div class="space-y-4">
                <a
                  href="tel:+1-800-XOLAR-CA"
                  class="flex items-center space-x-3 text-gray-700 hover:text-primary-600 transition-colors duration-200"
                >
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                  <span class="font-medium">1-800-XOLAR-CA</span>
                </a>
                <a
                  href="mailto:info@xolar.ca"
                  class="flex items-center space-x-3 text-gray-700 hover:text-primary-600 transition-colors duration-200"
                >
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                  <span class="font-medium">info@xolar.ca</span>
                </a>
              </div>
            </div>

            <!-- Trust Indicators -->
            <div class="bg-white border-2 border-gray-200 rounded-2xl p-8">
              <div class="space-y-4">
                <div class="flex items-center space-x-3">
                  <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    ></path>
                  </svg>
                  <span class="text-gray-700">10,000+ installations</span>
                </div>
                <div class="flex items-center space-x-3">
                  <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    ></path>
                  </svg>
                  <span class="text-gray-700">25-year warranties</span>
                </div>
                <div class="flex items-center space-x-3">
                  <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    ></path>
                  </svg>
                  <span class="text-gray-700">Certified installers</span>
                </div>
                <div class="flex items-center space-x-3">
                  <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    ></path>
                  </svg>
                  <span class="text-gray-700">No obligation quote</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
