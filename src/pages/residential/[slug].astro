---
import Layout from '../../layouts/Layout.astro';
import { residentialServices, getServiceBySlug, getRelatedServices } from '../../data/residentialServices';

export async function getStaticPaths() {
  return residentialServices.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;

if (!service) {
  return Astro.redirect('/residential');
}

const relatedServices = getRelatedServices(service.slug);
---

<Layout
  title={service.title + ' | Xolar Inc.'}
  description={service.metaDescription}
  keywords={service.keywords.join(', ')}
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-50 to-green-50 pt-20 pb-16 lg:pt-28 lg:pb-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl">
        <div class="mb-6">
          <a
            href="/residential"
            class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Residential Services
          </a>
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
          {service.hero.title}
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          {service.hero.subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="/quote"
            class="inline-flex items-center justify-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors duration-200"
          >
            Get Free Quote
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a
            href="tel:+1-800-XOLAR-CA"
            class="inline-flex items-center justify-center px-8 py-4 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:border-primary-500 hover:text-primary-600 transition-colors duration-200"
          >
            <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            Call Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Overview Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            {service.overview.title}
          </h2>
          <p class="text-lg text-gray-600 mb-8">
            {service.overview.description}
          </p>
        </div>
        <div class="bg-gray-50 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Key Benefits</h3>
          <div class="space-y-4">
            {
              service.overview.benefits.map((benefit) => (
                <div class="flex items-start space-x-3">
                  <svg
                    class="w-6 h-6 text-green-500 mt-1 flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span class="text-gray-700">{benefit}</span>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {service.features.title}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          service.features.items.map((feature) => (
            <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
              <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 10V3L4 14h7v7l9-11h-7z"
                  />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {service.process.title}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our proven installation process ensures quality and efficiency
        </p>
      </div>

      <div class="space-y-8">
        {
          service.process.steps.map((step, index) => (
            <div class="flex items-start space-x-6">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center">
                  <span class="text-2xl font-bold text-white">{step.step}</span>
                </div>
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-gray-900 mb-3">{step.title}</h3>
                <p class="text-lg text-gray-600">{step.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Specifications Section (if available) -->
  {
    service.specifications && (
      <section class="py-16 lg:py-24 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
              {service.specifications.title}
            </h2>
          </div>

          <div class="max-w-4xl mx-auto">
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
              <div class="grid grid-cols-1 md:grid-cols-2 divide-y md:divide-y-0 md:divide-x divide-gray-200">
                {service.specifications.items.map((item) => (
                  <div class="p-6">
                    <dt class="text-sm font-medium text-gray-500 mb-2">{item.label}</dt>
                    <dd class="text-2xl font-bold text-gray-900">{item.value}</dd>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </section>
    )
  }

  <!-- Pricing Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="bg-gradient-to-br from-primary-50 to-primary-100 rounded-2xl p-8 lg:p-12">
          <div class="text-center">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
              {service.pricing.title}
            </h2>
            <p class="text-lg text-gray-600 mb-8">
              {service.pricing.description}
            </p>
            <div class="mb-6">
              <span class="text-sm text-gray-600">Starting at</span>
              <div class="text-5xl md:text-6xl font-bold text-primary-600 my-4">
                {service.pricing.startingPrice}
              </div>
              <p class="text-sm text-gray-600">{service.pricing.priceNote}</p>
            </div>
            <a
              href="/quote"
              class="inline-flex items-center justify-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors duration-200"
            >
              Get Custom Quote
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Frequently Asked Questions
        </h2>
      </div>

      <div class="max-w-4xl mx-auto space-y-4">
        {
          service.faq.map((item) => (
            <details class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden group">
              <summary class="w-full px-6 py-5 text-left flex items-center justify-between cursor-pointer hover:bg-gray-50 transition-colors duration-200 list-none">
                <h3 class="text-lg font-semibold text-gray-900 pr-4">{item.question}</h3>
                <svg
                  class="w-5 h-5 text-primary-500 transform transition-transform duration-300 group-open:rotate-180 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"
                  />
                </svg>
              </summary>
              <div class="px-6 pb-5 border-t border-gray-100">
                <div class="pt-4">
                  <p class="text-gray-600 leading-relaxed">{item.answer}</p>
                </div>
              </div>
            </details>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Related Services Section -->
  {
    relatedServices.length > 0 && (
      <section class="py-16 lg:py-24 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Related Services</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Enhance your home energy system with these complementary solutions
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {relatedServices.map((related) => (
              <div class="bg-gray-50 rounded-xl p-8 hover:shadow-xl transition-shadow duration-300">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">{related.shortTitle}</h3>
                <p class="text-gray-600 mb-6">{related.description}</p>
                <a
                  href={`/residential/${related.slug}`}
                  class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold"
                >
                  Learn More
                  <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </a>
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-primary-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        {service.ctaSection.title}
      </h2>
      <p class="text-xl text-primary-100 mb-8 max-w-3xl mx-auto">
        {service.ctaSection.description}
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/quote"
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors duration-200"
        >
          {service.ctaSection.buttonText}
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            />
          </svg>
        </a>
        <a
          href="tel:+1-800-XOLAR-CA"
          class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-primary-600 transition-colors duration-200"
        >
          <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            />
          </svg>
          Call 1-800-XOLAR-CA
        </a>
      </div>
    </div>
  </section>
</Layout>
