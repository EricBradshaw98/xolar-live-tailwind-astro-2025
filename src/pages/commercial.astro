---
import Layout from '../layouts/Layout.astro';
import { commercialServices } from '../data/commercialServices';

const seoData = {
  title: 'Commercial Solar & Energy Solutions | Xolar Inc.',
  description:
    'Complete commercial energy solutions including solar panels, battery storage, and maintenance services. Reduce operating costs and achieve sustainability goals across Canada.',
  keywords:
    'commercial solar, business solar panels, commercial energy storage, solar maintenance, industrial solar, commercial renewable energy',
};
---

<Layout title={seoData.title} description={seoData.description} keywords={seoData.keywords}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-50 to-green-50 pt-20 pb-24 lg:pt-28 lg:pb-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
          Commercial Solar & Energy Solutions
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Transform your business operations with enterprise-grade solar and energy storage
          solutions. Reduce costs, enhance sustainability, and gain energy independence.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/quote"
            class="inline-flex items-center justify-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors duration-200"
          >
            Get Commercial Quote
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a
            href="#services"
            class="inline-flex items-center justify-center px-8 py-4 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:border-primary-500 hover:text-primary-600 transition-colors duration-200"
          >
            Explore Solutions
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section id="services" class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Enterprise Energy Solutions
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Comprehensive commercial energy systems designed for Canadian businesses
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          commercialServices.map((service) => (
            <div class="bg-white border-2 border-gray-200 rounded-2xl p-8 hover:border-primary-500 hover:shadow-xl transition-all duration-300">
              <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-6">
                <svg
                  class="w-8 h-8 text-primary-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 10V3L4 14h7v7l9-11h-7z"
                  />
                </svg>
              </div>

              <h3 class="text-2xl font-bold text-gray-900 mb-4">{service.shortTitle}</h3>
              <p class="text-gray-600 mb-6">{service.description}</p>

              <div class="space-y-3 mb-6">
                {service.overview.keyBenefits.slice(0, 3).map((benefit) => (
                  <div class="flex items-start space-x-3">
                    <svg
                      class="w-5 h-5 text-green-500 mt-1 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span class="text-gray-700 text-sm">{benefit}</span>
                  </div>
                ))}
              </div>

              <a
                href={`/commercial/${service.slug}`}
                class="inline-flex items-center justify-center w-full px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors duration-200"
              >
                Learn More
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Why Choose Commercial Solar -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
