---
import Layout from "../layouts/Layout.astro";
import TeslaPowerwall from "../components/TeslaPowerwall.astro";
import SolarPanel from "../components/SolarPanel.astro";
import CanadaMap from "../components/CanadaMap.astro";
import backgroundXolar from "../assets/background-xolar.jpg";

const seoData = {
  title: "Canada's Leading Solar Energy Company | Xolar Inc.",
  description:
    "Get free solar panel installation quotes across Canada. Leading solar energy company offering residential & commercial solar panels, Tesla Powerwall, heat pumps & EV charging.",
  keywords:
    "solar panels Canada, solar installation, Tesla Powerwall, solar energy, renewable energy, solar quotes",
};
