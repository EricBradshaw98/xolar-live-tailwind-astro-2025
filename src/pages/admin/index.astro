---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { mockProjects } from '../../data/mockProjects.js';

// Calculate statistics
const totalProjects = mockProjects.length;
const activeProjects = mockProjects.filter((p) => p.status === 'Open').length;
const totalBids = mockProjects.reduce((sum, p) => sum + p.bidCount, 0);
const avgBidsPerProject = (totalBids / totalProjects).toFixed(1);
---

<AdminLayout title="Dashboard">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Admin Dashboard</h1>
    <p class="text-gray-600">Manage your installer projects and bids</p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-600 mb-1">Total Projects</p>
      <p class="text-3xl font-bold text-gray-900">{totalProjects}</p>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-600 mb-1">Active Projects</p>
      <p class="text-3xl font-bold text-green-600">{activeProjects}</p>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-600 mb-1">Total Bids</p>
      <p class="text-3xl font-bold text-purple-600">{totalBids}</p>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <p class="text-sm text-gray-600 mb-1">Avg Bids/Project</p>
      <p class="text-3xl font-bold text-orange-600">{avgBidsPerProject}</p>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <a
        href="/admin/projects/new"
        class="flex items-center justify-center px-6 py-4 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors duration-200 font-medium"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"
          ></path>
        </svg>
        Add New Project
      </a>
      <a
        href="/admin/projects"
        class="flex items-center justify-center px-6 py-4 border-2 border-gray-300 text-gray-700 rounded-lg hover:border-primary-600 hover:text-primary-600 transition-colors duration-200 font-medium"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        View All Projects
      </a>
      <a
        href="/admin/bids"
        class="flex items-center justify-center px-6 py-4 border-2 border-gray-300 text-gray-700 rounded-lg hover:border-primary-600 hover:text-primary-600 transition-colors duration-200 font-medium"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
          ></path>
        </svg>
        View All Bids
      </a>
      <a
        href="/admin/projects/archived"
        class="flex items-center justify-center px-6 py-4 border-2 border-gray-300 text-gray-700 rounded-lg hover:border-primary-600 hover:text-primary-600 transition-colors duration-200 font-medium"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"
          ></path>
        </svg>
        Archived Projects
      </a>
    </div>
  </div>

  <!-- Recent Projects -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-semibold text-gray-900">Recent Projects</h2>
      <a href="/admin/projects" class="text-sm text-primary-600 hover:text-primary-700 font-medium">
        View All â†’
      </a>
    </div>

    <!-- Mobile Card View -->
    <div class="lg:hidden space-y-4">
      {
        mockProjects.slice(0, 5).map((project) => (
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
            <div class="flex items-start justify-between mb-3">
              <div class="flex-1">
                <a href={`/admin/projects/${project.id}/bids`} class="text-base font-semibold text-gray-900 hover:text-primary-600">
                  {project.title}
                </a>
                <p class="text-sm text-gray-600 mt-1">{project.estimatedValue}</p>
              </div>
              <div class="flex items-center space-x-1">
                <span
                  class={`px-2 py-1 text-xs font-medium rounded-full ${
                    project.projectType === 'Residential'
                      ? 'bg-blue-100 text-blue-800'
                      : 'bg-purple-100 text-purple-800'
                  }`}
                >
                  {project.projectType}
                </span>
                <span class={`px-2 py-1 text-xs font-medium rounded-full ${
                  project.status === 'Closed'
                    ? 'bg-red-100 text-red-800'
                    : 'bg-green-100 text-green-800'
                }`}>
                  {project.status}
                </span>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-3 mb-3">
              <div>
                <p class="text-xs text-gray-500 mb-1">Location</p>
                <p class="text-sm font-medium text-gray-900">{project.location}</p>
              </div>
              <div>
                <p class="text-xs text-gray-500 mb-1">Bids</p>
                <p class="text-sm font-medium text-gray-900">{project.bidCount}</p>
              </div>
              <div class="col-span-2">
                <p class="text-xs text-gray-500 mb-1">Deadline</p>
                <p class="text-sm font-medium text-gray-900">{new Date(project.deadline).toLocaleDateString()}</p>
              </div>
            </div>
            <div class="flex items-center space-x-2 pt-3 border-t border-gray-200">
              <a
                href={`/admin/projects/${project.id}`}
                class="flex-1 px-3 py-2 text-center border border-primary-600 text-primary-600 rounded-lg hover:bg-primary-50 transition-colors duration-200 text-sm font-medium"
              >
                Edit
              </a>
              <a
                href={`/admin/projects/${project.id}/bids`}
                class="flex-1 px-3 py-2 text-center bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors duration-200 text-sm font-medium"
              >
                View Bids
              </a>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Desktop Table View -->
    <div class="hidden lg:block overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Project
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Location
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Type
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Status
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Bids
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Deadline
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {
            mockProjects.slice(0, 5).map((project) => (
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <a href={`/admin/projects/${project.id}/bids`} class="text-sm font-medium text-gray-900 hover:text-primary-600">
                    {project.title}
                  </a>
                  <div class="text-sm text-gray-500">{project.estimatedValue}</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  {project.location}
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span
                    class={`px-2 py-1 text-xs font-medium rounded-full ${
                      project.projectType === 'Residential'
                        ? 'bg-blue-100 text-blue-800'
                        : 'bg-purple-100 text-purple-800'
                    }`}
                  >
                    {project.projectType}
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class={`px-2 py-1 text-xs font-medium rounded-full ${
                    project.status === 'Closed'
                      ? 'bg-red-100 text-red-800'
                      : 'bg-green-100 text-green-800'
                  }`}>
                    {project.status}
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  {project.bidCount}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  {new Date(project.deadline).toLocaleDateString()}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <a
                    href={`/admin/projects/${project.id}`}
                    class="p-2 text-primary-600 hover:bg-primary-50 rounded-lg transition-colors duration-200 inline-flex items-center justify-center"
                    title="Edit"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  </a>
                </td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </div>
  </div>
</AdminLayout>
